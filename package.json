{
  "name": "fdtparking",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "build": "tsc && copyfiles -u 1 src/views/**/* build/views && copyfiles -u 2 src/public/img/**/* build/public/img && copyfiles -u 2 src/public/*.css build/public",
    "reset": "rmdir /s /q node_modules && del package-lock.json && npm cache clean --force && npm install",
    "start": "node build/app.js",
    "dev": "nodemon --watch \"src/**/*.ts\" --exec \"npx ts-node src/app.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.{ts,json,md}\"",
    "dev:css": "tailwindcss -i ./src/public/input.css -o ./src/public/output.css --watch"
  },
  "dependencies": {
    "@slack/bolt": "^4.4.0",
    "@slack/types": "^2.16.0",
    "@tailwindcss/cli": "^4.1.13",
    "@vercel/kv": "^3.0.0",
    "@vercel/node": "^5.3.22",
    "cookie-parser": "^1.4.7",
    "cp": "^0.2.0",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "googleapis": "^159.0.0",
    "serverless-http": "^4.0.0",
    "tailwindcss": "^4.1.13",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}
