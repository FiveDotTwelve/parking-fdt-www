{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",    
    "outDir": "./build",  
    "rootDir": "./src",  
    "strict": true, 
    "esModuleInterop": true,  
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", 
    "resolveJsonModule": true,    
    "noImplicitAny": true    
  },
  "include": ["src/**/*"],   
  "exclude": ["node_modules", "build"]    
}
